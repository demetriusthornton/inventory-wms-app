rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if email is verified
    function isVerified() {
      return request.auth != null
             && request.auth.token.email_verified == true;
    }

    // Helper function to check allowed email domain (optional)
    // Update this to match your company domain
    function isAllowedDomain() {
      return request.auth.token.email.matches('.*@bluelinxco.com$')
             || request.auth.token.email.matches('.*@yourdomain.com$');
    }

    // Deny all access by default (secure by default)
    match /{document=**} {
      allow read, write: if false;
    }

    // App data under artifacts/{appId}/shared/global/
    match /artifacts/{appId}/shared/global/{collection}/{document=**} {
      // Require authentication and email verification
      allow read: if isVerified();
      allow write: if isVerified();

      // Optional: Also check domain
      // allow read: if isVerified() && isAllowedDomain();
      // allow write: if isVerified() && isAllowedDomain();
    }

    // Rate limiting collection (for Cloud Functions)
    match /rateLimits/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // User profiles (if you add them later)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
